<h1 class = "mt-2 ms-2 border shadow-sm p-3 col-6 text-center">Welcome to your To Do List! 😁</h1>
  <div class = "list-group ms-2 col-6 border rounded-2 shadow-sm p-3">
    <ul class="list-unstyled">
      <% @tasks.each do |task| %>
        <li>
          <%= link_to task[:title], task_path(task[:id]), class: "text-decoration-none"%>
        </li>
        <% end %>
    </ul>
  </div>
  <div class = "text-center ms-2 mt-2 col-6 border rounded-2 shadow-sm p-3">
    <%= link_to "add a new task", tasks_new_path %>
</div>
